<h1>New topic</h1>

<%= form_for :topic, url: "/topics/#{@topic.id}", method: :patch do |f| %>
    <div>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </div>
    <br>
    <div>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </div>

    <%= f.submit %>
<% end %>

<%= link_to "Back", "/" %>